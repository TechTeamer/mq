{
  "root": true,
  "extends": ["standard", "plugin:n/recommended"],
  "rules": {
    "curly": ["error", "all"],
    "brace-style": ["error", "1tbs", { "allowSingleLine": false }],
    "guard-for-in": "error",
    "no-console": "error",
    "no-debugger": "error",
    "radix": "error",
    "n/no-deprecated-api": "warn",
    "n/no-process-exit": "off",
    "no-process-exit": "off",
    "n/shebang": "off",
    "no-empty-function": "error",
    "no-shadow": "warn"
  },
  "env": {
    "commonjs": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2020
  }
}
